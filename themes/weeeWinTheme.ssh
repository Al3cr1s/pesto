QMainWindow {
    background-color: rgb(255, 255, 255);
}

QPushButton {
    background-color: rgba(0, 152, 58, 255);
    color: white;
}

QFrame {
    background-color: rgba(0, 0, 0, 0);
}

QTextEdit {
    background-color: rgba(0, 0, 0, 120);
    color: rgb(0, 255, 97);
}

QProgressBar {
    border: 2px solid grey;
    border-radius: 5px;
    color: rgb(255, 255, 255);
    min-height: 10px;
    max-height: 15px;
}

QProgressBar::chunk {
    background-color: rgba(0, 152, 58, 255);
    alternate-background-color: grey;
    width: 20px;
}

QHeaderView {
    background-color: rgba(0, 152, 58, 255);
    color: white;
}

QTableView::section {
    background-color: rgba(0, 152, 58, 255);
    color: white;
}

QHeaderView::section {
    background-color: rgba(0, 152, 58, 255);
    color: white;
}

QComboBox {
    background-color: rgba(0, 152, 58, 255);
    color: white;
}

QLineEdit {
    background-color: rgba(0, 152, 58, 200);
    color: white;
}

QRadioButton::indicator {
    width: 13px;
    height: 13px;
}

QRadioButton::indicator::unchecked {
    image: url(assets/radio/blk_radio_unckd.png);
}

QRadioButton::indicator::checked {
    image: url(assets/radio/blk_radio_ckd.png);
}